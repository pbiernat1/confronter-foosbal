{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Player List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Lp</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Ranking</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ player.firstName }}</td>
                <td>{{ player.lastName }}</td>
                <td>{{ player.ranking }}</td>
                <td>{{ player.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="input-group w-auto">
                        <a class="btn btn-success" href="{{ path('player_show', {'id': player.id}) }}">Show</a>
                        <a class="btn btn-warning" href="{{ path('player_edit', {'id': player.id}) }}">Edit</a>
                        {{ include('player/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('player_new') }}">Create new</a>
</div>
{% endblock %}
